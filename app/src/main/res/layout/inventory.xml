<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:gravity="left|center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/image"
			android:focusable="false"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/default_image"
			android:scaleType="fitCenter"/>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:fontFamily="@font/retrogaming"
				android:paddingLeft="2dp"
				android:paddingRight="8dp"
				android:paddingBottom="2dp"
				android:text="[NAME]"
				android:textColor="@color/colorGreen"
				android:textSize="16sp" />

			<TextView
				android:id="@+id/author"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/retrogaming"
				android:text="[AUTHOR]"
				android:textColor="@color/colorGreen"
				android:textSize="8sp" />

			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/wehicle"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:focusable="false"
					android:scaleType="fitCenter"
					android:src="@drawable/ridebutton_16px" />
				<ImageView
					android:id="@+id/placable"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/plusbutton_16px"
					android:scaleType="fitCenter"/>
				<ImageView
					android:id="@+id/usable"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/usebutton_16px"
					android:scaleType="fitCenter"/>
				<ImageView
					android:id="@+id/stacable"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/button2_16px"
					android:scaleType="fitCenter"/>
				<ImageView
					android:id="@+id/rotate"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/buttonrotate_16px"
					android:scaleType="fitCenter"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
